########################################################################
# Frequency Reference PVs

record(ai, "$(P)$(R)FPGAClk-Cte") {
  field(DESC, "FPGA Clock from EVG")
  field(EGU, "Hz")
  field(PINI, "1")
  field(VAL, "124914500")
  field(INP, "AS-RaMO:TI-EVG:FPGAClk-Cte CPP NMS")
}

