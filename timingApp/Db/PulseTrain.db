#####################################################
#
# 	       PULSE TRAIN EVENT RECORD
#
#####################################################

record(bo, "$(device):PTEN"){
	field(DESC, "Pulse Train Enable")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(VAL, "$(enable)")
}
record(longout, "$(device):PTCODE"){
	field(DESC, "Pulse Train Code")
	field(VAL, "$(code)")
}
record(ao, "$(device):PTSTART"){
	field(DESC, "Pulse Train start timestamp in ns")
	field(DRVL, "200")
	field(VAL, "$(start_time)")
}
record(longout, "$(device):PTCNT"){
	field(DESC, "Pulse Train pulse count")
	field(DRVL, "0")
	field(VAL, "$(pulse_count)")
}
record(ao, "$(device):PTLENGTH"){
	field(DESC, "Pulse Train duration in ns")
	field(DRVL, "0")
	field(VAL, "$(total_length)")
}
#####################################################
